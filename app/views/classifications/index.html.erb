<%= link_to 'New classification', new_classification_path %>
<table class="table table-striped table-hover">
  <tr>
    <th>标题</th>
    <th colspan="3"></th>
  </tr>
   
  <% @classifications.each do |classification| %>
    <tr>
      <td><%= link_to "#{classification.name}", edit_classification_path(classification) %></td>
      <td><%= link_to 'Show', classification_path(classification) %></td>
      <td><%= link_to 'Destroy', classification_path(classification), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
